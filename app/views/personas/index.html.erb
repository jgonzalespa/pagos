
<div>
	<%= notice%>
	<%= alert%>
</div>

<div><h3>Lista de Personas</h3></div>
<div><%= link_to 'Nuevo', new_persona_path%></div>
<div>
    <table>
        <thead>
            <tr>
                <td>Nombre</td>
                <td>Dni</td>
                <td>Capitulo</td>
            </tr>
    </thead>
    <tbody>
    <% @personas.each do |persona| %>
    <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.dni%></td>
        <td><%= Persona.capituloName(persona.capitulo_id) %></td>
        <td><%= link_to 'Editar', edit_persona_path(persona)%></td>
        <td><%= link_to 'Eliminar', delete_persona_path(persona), data:{turbo_method: :delete}%></td>
    </tr>
    <% end %>
    </tbody>
    </table>
</div>

