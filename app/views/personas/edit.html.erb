<div>
	<% @persona.errors.full_messages.each do |error|%>
	<div>
		<%= error%>	
	</div>	
	<% end%>	
</div>

<%= form_with model: @persona, url: update_persona_path do |f|%>
<div>
    <%= f.label :nombre%>
    <%= f.text_field :nombre%>
</div>
<div>
    <%= f.label :dni%>
    <%= f.text_field :dni%>
</div>
<div>
<%= f.select(:capitulo_id, Capitulo.getCapitulos )%>
</div>
<br>
<%= f.submit%>
<% end %>